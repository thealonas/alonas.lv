---
const projects = [
  {
    name: '🐩 nng',
    description: 'A set of utilities and scripts necessary for automating administrative processes of groups and communities in social networks.',
    url: 'https://nng.alonas.lv/'
  },
  {
    name: '🦉 submgr',
    description: 'A Telegram bot that simplifies the management of group subscriptions to various services. The bot operates on the principle of splitting the subscription cost among several users, allowing each of them to save money.',
    url: 'https://t.me/submgr_bot'
  }
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl" id="projects">📦 Projects</h2>
      <div class="grid gap-8 lg:grid-cols-2">
        {
          projects.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-12 rounded-3xl px-6 py-8">
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium"><a href={service.url}>{service.name}</a></h3>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">{service.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
